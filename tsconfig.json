{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "client/*": ["src/client/*"],
      "server/*": ["src/server/*"],
      "shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/client", "src/shared", "src/server"],
  "exclude": ["node_modules"],
  "files": ["src/shared/declare.d.ts"]
}
